@{ 

    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login Form</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>
    <link href="~/Content/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="login">
        <h1>ĐĂNG NHẬP</h1>
        <h3 style="color:white;text-align:center">Nhập User name và Password</h3>
        <h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
        <form method="post">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <input type="text" name="username" placeholder="Username..." class="form-username form-control" />
                @ViewData["Loi1"]
                <input type="password" name="password" placeholder="Password..." class="form-passwword form-control" />
                @ViewData["Loi2"]
                <button type="submit" class="btn btn-primary btn-block btn-large">Đăng nhập</button>
            }
        </form>
    </div>


    <script src="~/Content/js/index.js"></script>


</body>
</html>
